{
  "name": "csl",
  "version": "0.11.21",
  "description": "Церковнославянский язык сегодня",
  "license": "CC0-1.0",
  "main": "build/js/spa.js",
  "private": false,
  "scripts": {
    "build": "gulp",
    "build-data": "(cd ../slavdict/; pipenv run bin/csl_dumper.py)",
    "lint": "eslint",
    "lint-all": "clear; find src/ -name '*.js' | xargs eslint",
    "production": "rm -fr build .build; CSL_ENV=production gulp; yarn run sync-data; git --work-tree=../slavdict.github.io --git-dir=../slavdict.github.io/.git checkout master; rsync -av --checksum --delete --exclude CNAME --exclude .git --exclude .gitignore --exclude now.json --exclude *.pdf build/ ../slavdict.github.io/",
    "serve": "lite-server -c lite-server.config.json",
    "sync-data": "rm -fr build/e build/xp build/xf build/xg build/xgr; cp -R .temp/slavdict_generated/entries build/e; cp -R .temp/slavdict_generated/partial_index build/xp; cp -R .temp/slavdict_generated/greek_index build/xg; cp -R .temp/slavdict_generated/greek_index_reverse build/xgr",
    "test": "echo 'Error: no test specified' && exit 1",
    "watch": "find -type f -path './src/*' -o -path './package.json' -o -path './gulpfile.js' | entr -s 'npm-run-all --silent --parallel lint-all build'"
  },
  "dependencies": {
    "debug": "^4.1.0",
    "jquery": "^3.3.1",
    "knockout": "^3.5",
    "normalize.css": "^8.0.1",
    "page": "^1.11.4"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "cssnano": "^4.1.7",
    "gulp": "^4.0.0",
    "gulp-babel": "^8.0.0",
    "gulp-better-rollup": "^3.4.0",
    "gulp-eslint": "^5.0.0",
    "gulp-ext": "^1.0.0",
    "gulp-htmlmin": "^5.0.1",
    "gulp-if": "^2.0.2",
    "gulp-markdown": "^3.0.0",
    "gulp-nunjucks": "^4.0.0",
    "gulp-postcss": "^8.0.0",
    "gulp-rename": "^1.4.0",
    "gulp-terser": "^1.1.7",
    "lite-server": "^2.4.0",
    "postcss-calc": "^7.0.1",
    "postcss-css-variables": "^0.11.0",
    "postcss-easy-import": "^3.0.0",
    "postcss-env-function": "^2.0.2",
    "postcss-inline": "^1.2.0",
    "postcss-mixins": "^6.2.1",
    "postcss-nested": "^4.1.0",
    "postcss-preset-env": "^6.5.0",
    "postcss-simple-vars": "^5.0.1",
    "rollup": "^0.67.4",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-jscc": "^1.0.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "yarn-run-all": "^3.1.1"
  }
}
