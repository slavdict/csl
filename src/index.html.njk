{% extends 'scraps/webpage.html.njk' %}
{% from 'scraps/svg_use.njk' import svg_use %}

{% block main %}
  {% include 'scraps/random.svg' %}

  <header id="header">

    <a href="./">
      <figure id="logo">
          {% include 'scraps/yus.svg' %}
        <figcaption>Церковнославянский<br>язык<br>сегодня</figcaption>
      </figure>
    </a>

    {% include 'scraps/slovnik.htm' %}
    {% include 'scraps/menu.htm' %}

  </header>

  <div id="main">

    <div id="legend" data-bind="visible: !section()">{{ CSL_DESCRIPTION }}</div>

    {#
    {% include 'scraps/search.htm' %}
    #}

    <section class="video" data-bind="visible: !section()">
      <header>
        <aside>
          Случайные лекции из&nbsp;нашего <a href=".{{ urls.video }}">видеоархива</a>
          <a class="random disabled" href="">{{ svg_use('icon-random') }}</a>
        </aside>
      </header>
      <div class="main">
        {% include 'scraps/stubdata/video-pichxadze1.htm' %}
        {% include 'scraps/stubdata/video-sedakova1.htm' %}
      </div>
    </section>

    <section class="video" data-bind="visible: section() === 'video'">
      <header>
        <h1>Видео</h1>
      </header>
      <div class="main">
        <!-- ko foreach: videos -->
          <figure>
            <iframe width="1270" height="480" frameborder="0"
              data-bind="attr: { src: 'https://www.youtube.com/embed/' + id }"
              allow="accelerometer; autoplay; encrypted-media; gyroscope;
              picture-in-picture" allowfullscreen></iframe>
            <figcaption>
              <header data-bind="text: title"></header>
              <div class="speaker" data-bind="text: speaker"></div>
              <legend data-bind="text: legend"></legend>
            </figcaption>
          </figure>
        <!-- /ko -->
      </div>
    </section>

    <section class="article"
      data-bind="visible: !section() || section() === 'dictionary' && !indexIsOn()">
      <header>
        <aside data-bind="visible: !section()">
          Случайная статья из&nbsp;нашего
          <a class="disabled" href=".{{ urls.entries }}">словаря</a>
          <a class="random disabled" href="">{{ svg_use('icon-random') }}</a>
        </aside>
      </header>
      {% include 'scraps/stubdata/article-angel.htm' %}
    </section>

    <section class="refs" data-bind="visible: !section()">
      <header>
        <aside data-bind="visible: !section()">
          Случайная <a class="disabled" href=".{{ urls.refs }}">ссылка</a>
          <a class="random disabled" href="">{{ svg_use('icon-random') }}</a>
        </aside>
        <h1 data-bind="visible: section">Ссылки</h1>
      </header>
      {% include 'scraps/stubdata/ref1.htm' %}
    </section>

    <section class="index"
      data-bind="visible: section() === 'dictionary' && indexIsOn()">
    </section>

  </div>

  <footer id="footer">
    {% include 'scraps/patrons.htm' %}
    <div id="version">Версия портала<br>«{{ CSL_NAME }}»<br>{{ CSL_VERSION }}</div>
  </footer>

{% endblock %}
